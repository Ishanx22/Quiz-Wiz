{
  "manifest_version": 3,
  "name": "QuizWiz",
  "version": "1.0",
  "description": "Interactive quiz sidebar for any webpage!",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16px.png",
      "48": "48px.png",
      "128": "128px.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.jsx"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
